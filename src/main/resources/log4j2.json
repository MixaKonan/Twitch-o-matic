{
  "configuration": {
    "status": "error",
    "name": "Twitch-o-matic",
    "packages": "com.pingwinno",
    "ThresholdFilter": {
      "level": "debug"
    },
    "appenders": {
      "appender": [
        {
          "type": "Console",
          "name": "STDOUT",
          "PatternLayout": {
            "pattern": "%d{dd-MMM-yyyy HH:mm:ss} %highlight{%-5level} %c{1} %m %n"
          },
          "ThresholdFilter": {
            "level": "info"
          }
        },
        {
          "type": "File",
          "name": "File",
          "fileName":"/var/log/Twitch-o-matic.log",
          "PatternLayout": {
            "pattern": "%d{dd-MMM-yyyy HH:mm:ss} %-5level %c{1} %m %n"
          },
          "ThresholdFilter": {
            "level": "debug"
          }
        }
      ]
    },
    "loggers": {
      "logger": [
        { "name": "com.pingwinno", "level": "debug", "additivity": "false",
          "AppenderRef": [{ "ref": "File" }, {"ref": "STDOUT"}]}
      ],
      "root": { "level": "error", "AppenderRef": { "ref": "STDOUT" }}
    }
  }
}